[
  // navigate: editor -> sidebar, panel
  {
    "key": "ctrl+w right",
    "command": "commandTask.action.navigateRight",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+w left",
    "command": "commandTask.action.navigateLeft",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+w down",
    "command": "commandTask.action.navigateDown",
    "when": "editorFocus"
  },

  // navigate: sidebar, panel -> editor
  {
    "key": "ctrl+w right",
    "command": "commandTask.action.focusActiveEditorGroupWithHide",
    "when": "!editorFocus && !sideBarFocus && !panelFocus && !auxiliaryBarFocus"
  },
  {
    "key": "ctrl+w left",
    "command": "commandTask.action.focusActiveEditorGroupWithHide",
    "when": "!editorFocus && !sideBarFocus && !panelFocus && !auxiliaryBarFocus"
  },
  {
    "key": "ctrl+w up",
    "command": "commandTask.action.focusActiveEditorGroupWithHide",
    "when": "!editorFocus && !sideBarFocus && !panelFocus && !auxiliaryBarFocus"
  }
]
