{
  "publisher": "kevin-kwong",
  "name": "vscode-autohide-keyboard",
  "displayName": "Auto Hide KB",
  "type": "commonjs",
  "version": "0.2.4",
  "packageManager": "pnpm@9.7.1",
  "description": "Keyboard friendly Auto Hide",
  "repository": {
    "url": "https://github.com/kvoon3/vscode-autohide-kb"
  },
  "keywords": [
    "terminal",
    "panel",
    "side",
    "bar",
    "hide",
    "auto",
    "sidebar",
    "notifications",
    "keyboard",
    "vim"
  ],
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "icon": "Images/Icons/Logo_128.png",
  "engines": {
    "vscode": "^1.81.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "autoHide.toggleHideSideBar",
        "category": "Auto Hide",
        "title": "Toggle Auto Hide Side Bar for Current Workspace"
      },
      {
        "command": "autoHide.toggleHideAuxiliaryBar",
        "category": "Auto Hide",
        "title": "Toggle Auto Hide Auxiliary Bar for Current Workspace"
      },
      {
        "command": "autoHide.toggleHidePanel",
        "category": "Auto Hide",
        "title": "Toggle Auto Hide Panel for Current Workspace"
      },
      {
        "command": "autoHide.toggleHideReferences",
        "category": "Auto Hide",
        "title": "Toggle Auto Hide References for Current Workspace"
      },
      {
        "command": "autoHide.toggleHideNotifications",
        "category": "Auto Hide",
        "title": "Toggle Auto Hide Notifications for Current Workspace"
      },
      {
        "command": "autoHide.toggleHideOnlyMouse",
        "category": "Auto Hide",
        "title": "Toggle hide Only mouse"
      },
      {
        "command": "autoHide.toggleHidefromGit",
        "category": "Auto Hide",
        "title": "Toggle hide from git"
      },
      {
        "command": "autoHide.toggleMode",
        "category": "Auto Hide",
        "title": "toggle to manual/auto mode"
      },
      {
        "command": "autoHide.runHide",
        "category": "Auto Hide",
        "title": "Run hide immediately"
      },
      {
        "command": "autoHide.toggleEnable",
        "category": "Auto Hide",
        "title": "Toggle enable"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Auto Hide configuration",
      "properties": {
        "autoHide.ui": {
          "type": "object",
          "properties": {
            "sideBar": {
              "type": "boolean",
              "default": true,
              "description": "Side bar hideable"
            },
            "auxiliaryBar": {
              "type": "boolean",
              "default": true,
              "description": "Auxiliary bar hideable"
            },
            "panel": {
              "type": "boolean",
              "default": true,
              "description": "Panel hideable"
            },
            "references": {
              "type": "boolean",
              "default": false,
              "description": "References panel hideable"
            },
            "notifications": {
              "type": "boolean",
              "default": true,
              "description": "Notifications hideable"
            }
          }
        },
        "autoHide.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable Auto Hide"
        },
        "autoHide.triggerOnOpen": {
          "type": "boolean",
          "default": true,
          "description": "Trigger hide when VSCode first opens."
        },
        "autoHide.triggerOnlyMouse": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable hide only with mouse event"
        },
        "autoHide.triggerFromGit": {
          "type": "boolean",
          "default": false,
          "description": "Enable/Disable run hide when move to git changes"
        },
        "autoHide.mode": {
          "type": "string",
          "enum": [
            "auto",
            "manual"
          ],
          "default": "auto",
          "description": "set auto/manual mode"
        },
        "autoHide.throttleTime": {
          "type": "number",
          "default": 500,
          "description": "set throttle time"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pack": "vsce package --no-dependencies",
    "dev": "nr build --watch",
    "build": "tsup src/extension.ts --external vscode",
    "publish": "vsce publish --no-dependencies",
    "vscode:prepublish": "nr build",
    "release": "bumpp && nr publish",
    "type-check": "tsc --noEmit",
    "update": "vscode-ext-gen --output src/generated/meta.ts --scope autoHide",
    "prepare": "simple-git-hooks && esno scripts/prepare.js && nr update",
    "up": "taze -I major"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.26.0",
    "@antfu/ni": "^0.22.4",
    "@antfu/utils": "^0.7.10",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.4.2",
    "@vscode/vsce": "^3.0.0",
    "@vue/reactivity": "^3.4.38",
    "bumpp": "^9.5.1",
    "eslint": "^9.9.0",
    "esno": "^4.7.0",
    "fs-extra": "^11.2.0",
    "lint-staged": "^15.2.9",
    "mocha": "^10.7.3",
    "reactive-vscode": "^0.2.1",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.16.6",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vscode": "^1.1.37",
    "vscode-ext-gen": "^0.4.2"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
