{
  "publisher": "kevin-kwong",
  "name": "vscode-autohide-keyboard",
  "displayName": "Auto Hide KB",
  "type": "commonjs",
  "version": "0.1.3",
  "description": "Forked from AutoHide with optimized for a better keyboard-only usage experience",
  "repository": {
    "url": "https://github.com/kvoon3/vscode-autohide-kb"
  },
  "keywords": [
    "terminal",
    "panel",
    "side",
    "bar",
    "hide",
    "auto",
    "sidebar",
    "notifications",
    "keyboard",
    "vim"
  ],
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "icon": "Images/Icons/Logo_128.png",
  "engines": {
    "vscode": "^1.81.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "autoHide.toggleHideSideBar",
        "category": "Auto Hide",
        "title": "Toggle Auto Hide Side Bar for Current Workspace"
      },
      {
        "command": "autoHide.toggleHideAuxiliaryBar",
        "category": "Auto Hide",
        "title": "Toggle Auto Hide Auxiliary Bar for Current Workspace"
      },
      {
        "command": "autoHide.toggleHidePanel",
        "category": "Auto Hide",
        "title": "Toggle Auto Hide Panel for Current Workspace"
      },
      {
        "command": "autoHide.toggleHideOnlyMouse",
        "category": "Auto Hide",
        "title": "Toggle hide Only mouse"
      },
      {
        "command": "autoHide.switchToManualMode",
        "category": "Auto Hide",
        "title": "Switch to manual mode"
      },
      {
        "command": "autoHide.switchToAutoMode",
        "category": "Auto Hide",
        "title": "Switch to auto mode"
      },
      {
        "command": "autoHide.runHide",
        "category": "Auto Hide",
        "title": "Run hide immediately"
      },
      {
        "command": "autoHide.enable",
        "category": "Auto Hide",
        "title": "Enable Auto Hide"
      },
      {
        "command": "autoHide.disable",
        "category": "Auto Hide",
        "title": "Disable Auto Hide"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Auto Hide configuration",
      "properties": {
        "autoHide.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable Auto Hide"
        },
        "autoHide.autoHideSideBar": {
          "type": "boolean",
          "default": true,
          "description": "Hide the side bar when the user clicks into a text editor."
        },
        "autoHide.autoHideAuxiliaryBar": {
          "type": "boolean",
          "default": true,
          "description": "Hide the auxiliary bar (second side bar) when the user clicks into a text editor."
        },
        "autoHide.autoHidePanel": {
          "type": "boolean",
          "default": true,
          "description": "Hide the panel (output, terminal, etc.) when the user clicks into a text editor."
        },
        "autoHide.autoHideReferences": {
          "type": "boolean",
          "default": false,
          "description": "Hide the References panel (`Go to References`) when the user clicks into a text editor."
        },
        "autoHide.autoHideNotifications": {
          "type": "boolean",
          "default": false,
          "description": "Hide the notifications when the user clicks into a text editor."
        },
        "autoHide.hideOnOpen": {
          "type": "boolean",
          "default": true,
          "description": "Hide side bar and panel when VSCode first opens."
        },
        "autoHide.hideOnlyMouse": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable hide only with mouse"
        },
        "autoHide.hideFromGit": {
          "type": "boolean",
          "default": false,
          "description": "Enable/Disable run hide when open git changes"
        },
        "autoHide.mode": {
          "type": "string",
          "enum": [
            "auto",
            "manual"
          ],
          "default": "auto",
          "description": "set auto/manual mode"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pack": "vsce package --no-dependencies",
    "dev": "nr build --watch",
    "build": "tsup src/extension.ts --external vscode",
    "publish": "vsce publish --no-dependencies",
    "vscode:prepublish": "nr build",
    "release": "bumpp && nr publish"
  },

  "devDependencies": {
    "@antfu/eslint-config": "^2.4.5",
    "@antfu/ni": "^0.21.9",
    "@antfu/utils": "^0.7.10",
    "@types/mocha": "^10.0.6",
    "@types/node": "^16.18.68",
    "@vscode/vsce": "^2.22.0",
    "@vue/reactivity": "^3.4.5",
    "bumpp": "^9.2.0",
    "eslint": "^8.55.0",
    "mocha": "^10.2.0",
    "taze": "^0.13.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vscode": "^1.1.37"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ]
}
